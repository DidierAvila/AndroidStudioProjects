<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:padding="8dp"
android:paddingLeft="8dp"
android:paddingTop="8dp"
android:paddingRight="8dp"
android:paddingBottom="8dp"
android:weightSum="1">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edFullName"
    android:textAlignment="center"
    android:layout_weight="0.03"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="4dp"
    android:hint="Full Name" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edLastName"
    android:textAlignment="center"
    android:layout_weight="0.03"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="4dp"
    android:hint="Last Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edUsername"
        android:textAlignment="center"
        android:layout_weight="0.03"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:hint="Username" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/lblMensaleValidacionNick"
    android:layout_gravity="center_horizontal"
    android:textAlignment="center"
    android:textSize="0dp" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/edPassword"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.03"
    android:layout_marginBottom="4dp"
    android:textAlignment="center"
    android:hint="Password" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/lblClave2"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.03"
    android:textAlignment="center"
    android:hint="Confirmar clave"
    android:layout_marginBottom="2dp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/lblMensaleValidacionContraseÃ±a"
    android:layout_gravity="center_horizontal"
    android:textAlignment="center"
    android:textSize="0dp"
    android:layout_weight="0.03" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Jugadores registrados:  "
    android:id="@+id/lblCantidad"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.10"
    android:textAlignment="center"
    android:paddingTop="3dp" />

    <Button
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mensaje"
        android:id="@+id/txvMensaje"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03" />

</LinearLayout>