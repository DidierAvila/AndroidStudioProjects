<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoss"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.openlab1.strooper.MainActivity">

    <EditText
        android:id="@+id/pwdUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Ingrese su nick"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/pwdClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwdUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Ingrese su contraseÃ±a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwdClave"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="37dp"
        android:width="300dp"
        android:background="#4eb3b0"
        android:text="Ingresar"
        android:textColor="@color/Blanco"
        android:textIsSelectable="false"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtwInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Inicie sesion"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="46dp" />

    <TextView
        android:id="@+id/lblMnsjConteo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:height="30dp"
        android:textAlignment="center"
        android:textColor="#00BFA5"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnIngresar"
        android:layout_below="@+id/btnIngresar"
        android:width="300dp"
        android:background="#4eb3b0"
        android:text="Registrar"
        android:textColor="@color/Blanco"
        android:textSize="17dp" />

</RelativeLayout>
