<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodos"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.openlab1.strooper.RecuperacionClave">

    <TextView
        android:id="@+id/txtvwTitulo"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="46dp"
        android:text="Recuperar clave"
        android:textAlignment="center"
        android:textColor="#00BFA5"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtvwTitulo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:hint="Ingrese su nombre"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNombre"
        android:hint="Ingrese su nick"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnGenerarClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNick"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:background="#4fc3f7"
        android:text="Generar Contrase単a"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/lblContrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGenerarClave"
        android:height="40dp"
        android:layout_marginTop="20dp"
        android:text="Su nueva contrase単a es:"
        android:textAlignment="center"
        android:textColor="#00BFA5"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtNuevaClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblContrase単a"
        android:textAlignment="center" />

</RelativeLayout>
