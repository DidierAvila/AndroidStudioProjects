<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.desarrollo.strooperproject.Game">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@drawable/img_cronometro"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtvMilesegundos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:gravity="bottom"
                    android:layout_gravity="center"
                    android:text="3"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txtvTiempoSegundos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="90sp"
                    android:textColor="#00e676"
                    android:text="3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color aleatorio"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:id="@+id/lblAleatorio" />

            <TextView
                android:id="@+id/txtvTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rojo"
                android:textSize="65sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:layout_marginTop="6dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img_1"
            android:src="@drawable/img_rojo"
            android:layout_margin="2dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img_2"
            android:src="@drawable/img_verde"
            android:layout_margin="2dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img_3"
            android:src="@drawable/img_amarillo"
            android:layout_margin="2dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/img_4"
            android:src="@drawable/img_azul"
            android:layout_margin="2dp"
            android:elevation="1dp"
            android:focusableInTouchMode="false"
            android:background="@android:color/transparent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <Button
            android:id="@+id/btnPausa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pausar Juego"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reiniciar Partida"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>
